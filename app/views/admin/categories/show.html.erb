<%- model_class = Admin::Category -%>
<div class="page-header">
    <h1>الفئة رقم <%= @category.id %></h1>
    <ol class="breadcrumb">
        <li>
            <i class="fa fa-dashboard"></i> <%= link_to 'Dashboard', :admin_dashboard %>
        </li>
        <li>
            <i class="fa fa-table"></i> <%= link_to 'الفئات', admin_categories_path %>
        </li>
        <li class="active">
            الفئة رقم <%= @category.id %>
        </li>
    </ol>
</div>

<dl class="dl-horizontal">
    <dt><strong>الفئة الأم:</strong></dt>
    <dd><%= @category.parent_id %></dd>
    <dt><strong>الإسم:</strong></dt>
    <dd><%= @category.name %></dd>
    <dt><strong>التعليقات:</strong></dt>
    <dd><%= @category.comments %></dd>
    <% if @category.photo_file_name %>
        <dt><strong>الصورة:</strong></dt>
        <dd><%= image_tag @category.photo.url %></dd>
    <% end %>
</dl>

<%= link_to 'الرحوع', admin_categories_path, :class => 'btn btn-default' %>
<%= link_to 'تعديل', edit_admin_category_path(@category), :class => 'btn btn-default' %>
<%= link_to 'مسح', admin_category_path(@category), :method => 'delete',
    :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
    :class => 'btn btn-danger' %>
