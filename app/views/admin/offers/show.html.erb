<%- model_class = Offer -%>
<div class="page-header">
    <h1>العرض رقم <%= @offer.id %></h1>
    <ol class="breadcrumb">
        <li>
            <i class="fa fa-dashboard"></i> <%= link_to 'Dashboard', :admin_dashboard %>
        </li>
        <li>
            <i class="fa fa-table"></i> <%= link_to 'العروض', admin_offers_path %>
        </li>
        <li class="active">
            العرض رقم <%= @offer.id %>
        </li>
    </ol>
</div>

<dl class="dl-horizontal">
    <dt><strong>العنوان:</strong></dt>
    <dd><%= @offer.title %></dd>
    <dt><strong>الشرح:</strong></dt>
    <dd><%= @offer.description %></dd>
    <dt><strong>إبتداءًا من:</strong></dt>
    <dd><%= @offer.start %></dd>
    <dt><strong>إنتهاءًا في:</strong></dt>
    <dd><%= @offer.end %></dd>
</dl>

<%= link_to 'الرجوع', admin_offers_path, :class => 'btn btn-default' %>
<%= link_to 'تعديل', edit_admin_offer_path(@offer), :class => 'btn btn-default' %>
<%= link_to 'مسح', admin_offer_path(@offer), :method => 'delete',
    :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
    :class => 'btn btn-danger' %>
