<%= form_for @cart, :html => {:class => "form-horizontal cart"} do |f| %>

    <% if @cart.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="panel-title"><%= pluralize(@cart.errors.count, "error") %> prohibited this cart from being
                    saved:</h3>
            </div>
            <div class="panel-body">
                <ul>
                    <% @cart.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label :user_id, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
            <%= f.text_field :user_id, :class => 'form-control' %>
        </div>
        <%= f.error_span(:user_id) %>
    </div>
    <div class="form-group">
        <%= f.label :placed, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
            <select class="form-control" name="cart[placed]" id="cart_placed">
                <option value="true"
                        <% if @cart.placed == true %> selected
                        <% end %>>True
                </option>
                <option value="false"
                        <% if @cart.placed == false %> selected
                        <% end %>>False
                </option>
            </select>
        </div>
        <%= f.error_span(:placed) %>
    </div>

    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <%= f.submit nil, :class => 'btn btn-primary' %>
            <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                carts_path, :class => 'btn btn-default' %>
        </div>
    </div>

<% end %>
