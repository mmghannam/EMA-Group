<%- model_class = Cart -%>
<div class="page-header">
    <h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
    <ol class="breadcrumb">
        <li>
            <i class="fa fa-dashboard"></i> <%= link_to 'Dashboard', :admin_dashboard %>
        </li>
        <li class="active">
            <i class="fa fa-table"></i> Carts
        </li>
    </ol>
</div>
<table class="table table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>المُستخدم</th>
        <th><%= model_class.human_attribute_name(:placed) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <th>الإجراءات</th>
    </tr>
    </thead>
    <tbody>
    <% @carts.each do |cart| %>
        <tr>
            <td><%= cart.id %></td>
            <td><%= User.find(cart.user_id).name %></td>
            <td><%= cart.placed %></td>
            <td><%= cart.created_at %></td>
            <td>
                <%= link_to 'Show Orders', orders_path(:cart_id => cart.id), :class => 'btn btn-xs btn-default' %>

                <%= link_to 'تعديل', edit_cart_path(cart), :class => 'btn btn-xs btn-default' %>

                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    cart_path(cart),
                    :method => :delete,
                    :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                    :class => 'btn btn-xs btn-danger' %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>

<%= link_to 'New', new_cart_path, :class => 'btn btn-primary' %>

<script>
    $(function () {
        $(".table").dataTable();
    });
</script>
