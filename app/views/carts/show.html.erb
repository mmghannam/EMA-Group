<%- model_class = Cart -%>
<div class="page-header">
    <h1><%= t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
    <dt><strong>المُستخدم:</strong></dt>
    <dd><%= User.find(@cart.user_id).name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:placed) %>:</strong></dt>
    <dd><%= @cart.placed %></dd>
</dl>

<%= link_to 'الرحوع', carts_path, :class => 'btn btn-default' %>
<%= link_to 'تعديل', edit_cart_path(@cart), :class => 'btn btn-default' %>
<%= link_to 'مسح', cart_path(@cart), :method => 'delete',
    :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
    :class => 'btn btn-danger' %>
