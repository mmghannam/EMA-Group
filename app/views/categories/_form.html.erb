<%= form_for @category, :html => {:class => "form-horizontal category"} do |f| %>

    <% if @category.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="panel-title"><%= pluralize(@category.errors.count, "error") %> prohibited this category from
                    being saved:</h3>
            </div>
            <div class="panel-body">
                <ul>
                    <% @category.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    <% end %>


    <div class="form-group">
        <%= f.label :parent_id, :class => 'control-label col-lg-2' %>
        <div class="col-lg-9">
            <%= f.collection_select :parent_id, Category.all, :id, :name, :include_blank => 'No Parent' %>
        </div>
        <%= f.error_span(:parent_id) %>
    </div>
    <div class="form-group">
        <%= f.label :name, :class => 'control-label col-lg-2' %>
        <div class="col-lg-9">
            <%= f.text_field :name, :class => 'form-control' %>
        </div>
        <%= f.error_span(:name) %>
    </div>
    <div class="form-group">
        <%= f.label :comments, :class => 'control-label col-lg-2' %>
        <div class="col-lg-9">
            <%= f.text_field :comments, :class => 'form-control' %>
        </div>
        <%= f.error_span(:comments) %>
    </div>

    <div class="form-group">
        <%= f.label :photo, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
            <%= f.file_field :photo, :class => 'form-control' %>
        </div>
        <%= f.error_span(:photo) %>
    </div>

    <% if @category.photo_file_name %>
        <div class="form-group">
            <%= f.label :photo, "Current Photo: ", :class => 'control-label col-lg-2' %>
            <div class="col-lg-10">
                <%= @category.photo_file_name %>
            </div>
        </div>
    <% end %>

    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <%= f.submit nil, :class => 'btn btn-primary' %>
            <%= link_to t('.cancel', :default => t("helpers.links.cancel")), categories_path, :class => 'btn btn-default' %>
        </div>
    </div>

<% end %>

<script>
    $('#category_parent_id').selectpicker({
        style: 'btn-default',
        size: 4
    });

</script>