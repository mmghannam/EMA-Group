<%- model_class = Category -%>
<div class="page-header">
    <h1>صنف</h1>
</div>

<dl class="dl-horizontal">
    <dt><strong>الصنف الأم:</strong></dt>
    <dd><%= @category.parent_id %></dd>
    <dt><strong>الإسم:</strong></dt>
    <dd><%= @category.name %></dd>
    <dt><strong>التعليقات:</strong></dt>
    <dd><%= @category.comments %></dd>
    <% if @category.photo_file_name %>
        <dt><strong>الصورة:</strong></dt>
        <dd><%= image_tag @category.photo.url %></dd>
    <% end %>
</dl>

<%= link_to 'الرحوع', categories_path, :class => 'btn btn-default' %>
<%= link_to 'تعديل', edit_category_path(@category), :class => 'btn btn-default' %>
<%= link_to 'مسح', category_path(@category), :method => 'delete',
    :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
    :class => 'btn btn-danger' %>
