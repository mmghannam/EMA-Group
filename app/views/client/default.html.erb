<div class="featured">
  <div class="container">
    <h3>Featured Products</h3>
    <div class="feature-grids">
      <% @featured_products.each do |product| %>
          <div class="col-md-3 feature-grid jewel">
            <div onclick="javascript:window
                .location = '/client/single_product?product_id=<%= product.id %>'" style="cursor:pointer;">
              <% if product.photo_file_name %>
                  <%= image_tag product.photo.url %>
              <% else %>
                  <img src="/client/images/pills.png"/>
              <% end %>
              <div class="arrival-info">
                <h4><%= product.name %></h4>
                <p>population price :<%= product.price_population %> L.E</p>
                <p>pharmacy price :<%= product.price_pharmacy %> L.E</p>
              </div>

            </div>
          </div>
      <% end %>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
<!---->
<div class="arrivals">
  <div class="container">
    <h3>New Arrivals</h3>
    <div class="arrival-grids">
      <ul id="flexiselDemo1">
        <% @new_arrivals.each do |product| %>
            <li>
              <div onclick="javascript:window
                  .location = '/client/single_product?product_id=<%= product.id %>'" style="cursor:pointer;">
                <% if product.photo_file_name %>
                    <%= image_tag product.photo.url %>
                <% else %>
                    <img src="/client/images/pills.png"/>
                <% end %>
                <div class="arrival-info">
                  <h4><%= product.name %></h4>
                  <p>population price :<%= product.price_population %> L.E</p>
                  <p>pharmacy price :<%= product.price_pharmacy %> L.E</p>
                </div>

              </div>
            </li>
        <% end %>
      </ul>
      <script type="text/javascript">
        $(window).load(function () {
          $("#flexiselDemo1").flexisel({
            visibleItems: 4,
            animationSpeed: 1000,
            autoPlay: true,
            autoPlaySpeed: 3000,
            pauseOnHover: true,
            enableResponsiveBreakpoints: true,
            responsiveBreakpoints: {
              portrait: {
                changePoint: 480,
                visibleItems: 1
              },
              landscape: {
                changePoint: 640,
                visibleItems: 2
              },
              tablet: {
                changePoint: 768,
                visibleItems: 3
              }
            }
          });
        });
      </script>
      <script type="text/javascript" src="/client/js/jquery.flexisel.js"></script>
    </div>
  </div>
</div>
