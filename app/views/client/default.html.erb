<div class="featured">
  <div class="container">
    <h3>Categories</h3>
    <div class="feature-grids">
      <% @parent_categories.each do |category| %>
          <div class="col-md-3 feature-grid jewel">
            <div onclick="javascript:window
                .location = '/client/products?category_id=<%= category.id %>'" style="cursor:pointer;">
              <% if category.photo_file_name %>
                  <%= image_tag product.photo.url %>
              <% else %>
                  <img src="/client/images/category.jpg"/>
              <% end %>
              <div class="arrival-info">
                <h4><%= category.name %></h4>
                <p><%= category.name %></p>
              </div>
            </div>
          </div>
      <% end %>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
