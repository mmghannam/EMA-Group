<div id="owl" class="container">
  <% Offer.all.each do |offer| %>
      <div class="jumbotron">
        <div class="text-center">
          <h1 dir="rtl"><%= offer.title %></h1>
          <p dir="rtl"><%= offer.description %></p>
        </div>
      </div>
  <% end %>
</div>

