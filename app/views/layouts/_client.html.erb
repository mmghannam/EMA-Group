<body>
    <!--header-->
    <div class="top_bg">
        <div class="container">
            <div class="header_top-sec">
                <div class="top_right">
                    <ul>
                        <li><%= link_to 'Home', :root %></li>
                        |
                        <li><%= link_to 'Contact Us', :contact_us %></li>
                    </ul>
                </div>
                <div class="top_left">
                    <ul>
                        <% if current_user %>
                            <li class="top_link"><%= 'My Account' %></li>
                            |
                            <li class="top_link"><%= link_to 'Log out',
                                controller: 'devise/sessions', action: 'destroy', id: current_user.id
                            %></li>
                        <% else %>
                            <li class="top_link"><%= link_to 'Sign In', new_user_session_path %></li>
                        <% end %>
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div class="header-top">
        <div class="header-bottom">
            <div class="container">
                <div class="logo">
                    <a href="/"><h1><img src="/client/images/ema.jpg" style="width:20%"/>EMA-GROUP</h1></a>
                </div>
                <!---->

                <div class="top-nav">
                    <ul class="memenu skyblue">
                        <li class="active"><a href="/">Home</a></li>
                        <li class="grid"><a href="<%= client_products_path %>">Products</a></li>
                        <li class="grid"><%= link_to 'Offers', client_offers_path %></li>
                        <li class="grid"><%= link_to 'Contact', :contact_us %></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <!---->

                <% if current_user and (current_user.carts.where(placed: false).count > 0) %>
                    <% cart = current_user.carts.where(placed: false)[0] %>
                    <div class="cart box_1">
                        <a href="<%= client_checkout_path %>?cart_id=<%= cart.id %>">
                            <h3>
                                <div class="total">
                                    <span class=""><%= cart.price_population %> L.E</span>
                                    (<span class=""><%= cart.orders.count %></span>)
                                </div>
                                <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span></h3>
                        </a>
                        <div class="clearfix"></div>
                    </div>
                <% end %>
                <div class="clearfix"></div>
                <!---->
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <!---->
    <section>
        <div class="container">
            <%= yield %>
        </div>
    </section>
    <!---->
    <div class="copywrite">
        <div class="container">
            <p>Copyright Â© EMA-Group</p>
        </div>
    </div>
</body>

