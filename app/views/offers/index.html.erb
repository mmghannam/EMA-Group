<%- model_class = Offer -%>
<div class="page-header" dir="rtl">
  <h1>العروض</h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th>ID</th>
    <th>العنوان</th>
    <th>الشرح</th>
    <th>إبتداءًا من</th>
    <th>إنتهاءًا في</th>
    <th>الإجراءات</th>
  </tr>
  </thead>
  <tbody>
  <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.id %></td>
        <td><%= offer.title %></td>
        <td><%= offer.description %></td>
        <td><%= offer.start ? (l offer.start) : '' %></td>
        <td><%= offer.end ? (l offer.end) : '' %></td>
        <td>
          <%= link_to 'تعديل', edit_admin_offer_path(offer), :class => 'btn btn-xs btn-default' %>

          <%= link_to 'مسح', admin_offer_path(offer), :method => :delete,
                      :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'أضف عرض', new_admin_offer_path, :class => 'btn btn-primary' %>

<script>
  $(function () {
    $(".table").dataTable({
      "language": {
        "url": "/lib/datatables/lang-ar.json"
      }
    });
  });
</script>
