<%- model_class = Offer -%>
<div class="page-header">
    <h1><%= t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
    <dt><strong>العنوان:</strong></dt>
    <dd><%= @offer.title %></dd>
    <dt><strong>الشرح:</strong></dt>
    <dd><%= @offer.description %></dd>
    <dt><strong>إبتداءًا من:</strong></dt>
    <dd><%= @offer.start %></dd>
    <dt><strong>إنتهاءًا في:</strong></dt>
    <dd><%= @offer.end %></dd>
</dl>

<%= link_to 'الرجوع', offers_path, :class => 'btn btn-default' %>
<%= link_to 'تعديل', edit_offer_path(@offer), :class => 'btn btn-default' %>
<%= link_to 'مسح', offer_path(@offer), :method => 'delete',
    :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
    :class => 'btn btn-danger' %>
