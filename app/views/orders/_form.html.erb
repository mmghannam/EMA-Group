<%= form_for @order, :html => {:class => "form-horizontal order"} do |f| %>

    <% if @order.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="panel-title"><%= pluralize(@order.errors.count, "error") %> prohibited this order from being
                    saved:</h3>
            </div>
            <div class="panel-body">
                <ul>
                    <% @order.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label :product_id, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
            <%= f.text_field :product_id, :class => 'form-control' %>
        </div>
        <%= f.error_span(:product_id) %>
    </div>
    <div class="form-group">
        <%= f.label :quantity, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
            <%= f.text_field :quantity, :class => 'form-control' %>
        </div>
        <%= f.error_span(:quantity) %>
    </div>
    <div class="form-group">
        <%= f.label :cart_id, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
            <%= f.collection_select :cart_id, Cart.all, :id, :id, {:value => params[:cart_id]}, {:class => 'form-control'} %>
        </div>
        <%= f.error_span(:cart_id) %>
    </div>

    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <%= f.submit nil, :class => 'btn btn-primary' %>
            <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn btn-default' %>
        </div>
    </div>

<% end %>
