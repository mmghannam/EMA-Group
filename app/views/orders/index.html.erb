<%- model_class = Order -%>
<div class="page-header">
    <h1>الطلبات</h1>
    <ol class="breadcrumb">
        <li>
            <i class="fa fa-dashboard"></i> <%= link_to 'Dashboard', :admin_dashboard %>
        </li>
        <li class="active">
            <i class="fa fa-table"></i> الطلبات
        </li>
    </ol>
</div>
<table class="table table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>المنتج</th>
        <th>الكمية</th>
        <th><%= model_class.human_attribute_name(:cart_id) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <th>الإجراءات</th>
    </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
        <tr>
            <td><%= order.id %></td>
            <td><%= Product.find(order.product_id).name %></td>
            <td><%= order.quantity %></td>
            <td><%= order.cart_id %></td>
            <td><%= l order.created_at %></td>
            <td>
                <%= link_to 'تعديل', edit_order_path(order), :class => 'btn btn-default btn-xs' %>

                <%= link_to 'مسح', order_path(order), :method => :delete,
                    :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                    :class => 'btn btn-xs btn-danger' %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>

<%= link_to 'أضف طلب', new_order_path, :class => 'btn btn-primary'
%>

<script>
    $(function () {
        $(".table").dataTable({
            "language": {
                "url": "/lib/datatables/lang-ar.json"
            }
        });
    });
</script>
