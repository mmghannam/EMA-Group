<%- model_class = Order -%>
<div class="page-header">
    <h1>المُشترىات</h1>
    <ol class="breadcrumb">
        <li>
            <i class="fa fa-dashboard"></i> <%= link_to 'Dashboard', :admin_dashboard %>
        </li>
        <li class="active">
            <i class="fa fa-table"></i> المُشترىات
        </li>
    </ol>
</div>
<table class="table table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>المنتج</th>
        <th>الكمية</th>
        <th>السعر للصيدليات</th>
        <th>السعر للجمهور</th>
        <th><%= model_class.human_attribute_name(:cart_id) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <th>الإجراءات</th>
    </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
        <tr>
            <td><%= order.id %></td>
            <td><%= Product.find(order.product_id).name %></td>
            <td><%= order.quantity %></td>
            <td><%= order.price_pharmacy %></td>
            <td><%= order.price_population %></td>
            <td><%= order.cart_id %></td>
            <td><%= l order.created_at %></td>
            <td>
                <%= link_to 'عرض التفاصيل', order_path(order), :class => 'btn btn-default' %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>

<script>
    $(function () {
        $(".table").dataTable({
            "language": {
                "url": "/lib/datatables/lang-ar.json"
            }
        });
    });
</script>
