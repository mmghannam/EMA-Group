<%- model_class = Order -%>
<div class="page-header">
    <h1><%= t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
    <dt><strong>المنتج:</strong></dt>
    <dd><%= Product.find(@order.product_id).name %></dd>
    <dt><strong>الكمية:</strong></dt>
    <dd><%= @order.quantity %></dd>
    <dt><strong><%= model_class.human_attribute_name(:cart_id) %>:</strong></dt>
    <dd><%= @order.cart_id %></dd>
</dl>

<%= link_to 'الرجوع', orders_path, :class => 'btn btn-default' %>
<%= link_to 'تعديل', edit_order_path(@order), :class => 'btn btn-default' %>
<%= link_to 'مسح', order_path(@order), :method => 'delete',
    :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
    :class => 'btn btn-danger' %>
