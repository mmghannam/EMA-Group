<%- model_class = Product -%>
<div class="page-header">
    <h1>المنتج رقم <%= @product.id %></h1>
    <ol class="breadcrumb">
        <li>
            <i class="fa fa-dashboard"></i> <%= link_to 'Dashboard', :admin_dashboard %>
        </li>
        <li>
            <i class="fa fa-table"></i> <%= link_to 'المنتجات', products_path %>
        </li>
        <li class="active">
            المنتج رقم <%= @product.id %>
        </li>
    </ol>
</div>

<dl class="dl-horizontal">
    <dt><strong>الصنف:</strong></dt>
    <dd><%= Category.find(@product.category_id).name %></dd>
    <dt><strong>الإسم:</strong></dt>
    <dd><%= @product.name %></dd>
    <dt><strong>السعر للصيدليات:</strong></dt>
    <dd><%= @product.price_pharmacy %></dd>
    <dt><strong>السعر للجمهور:</strong></dt>
    <dd><%= @product.price_population %></dd>
    <dt><strong>التعليقات:</strong></dt>
    <dd><%= @product.comments %></dd>
    <% if @product.photo_file_name %>
        <dt><strong>الصورة:</strong></dt>
        <dd><%= image_tag @product.photo.url %></dd>
    <% end %>
</dl>

<%= link_to 'الرحوع', products_path, :class => 'btn btn-default' %>
<%= link_to 'تعديل', edit_product_path(@product), :class => 'btn btn-default' %>
<%= link_to 'مسح', product_path(@product), :method => 'delete',
    :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
    :class => 'btn btn-danger' %>
